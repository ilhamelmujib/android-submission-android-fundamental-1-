<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/userFragment">
    <fragment
        android:id="@+id/userFragment"
        android:name="id.ilhamelmujib.submissionandroidfundamental.ui.user.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user">
        <action
            android:id="@+id/action_userFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="id.ilhamelmujib.submissionandroidfundamental.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="user"
            app:argType="id.ilhamelmujib.submissionandroidfundamental.data.local.entity.UserEntity" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="id.ilhamelmujib.submissionandroidfundamental.ui.favorite.FavoriteFragment"
        android:label="FavoriteFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="id.ilhamelmujib.submissionandroidfundamental.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>